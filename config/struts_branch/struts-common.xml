<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="admin" extends="default" namespace="/admin">
		<!-- 登录页面 -->
		<action name="*" method="{1}" class="adminAction"></action>
		<!-- 首页 -->
		<action name="index" method="index" class="indexAction">
			<result name="success">/WEB-INF/pages/admin/index.jsp</result>
			<interceptor-ref name="loginStack"></interceptor-ref>
		</action>
		<!-- 各个栏目跳转 -->
		<action name="*/*" method="{2}" class="{1}Action">
			<result>/WEB-INF/pages/admin/{1}.jsp</result>
		</action>
	</package>
</struts>